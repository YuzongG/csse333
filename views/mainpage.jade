extends layout

block content
	h1 Hello #{Name}
	div.hero-unit
		h1 Korean Guide
		a(href='/mainpage/logout').btn.btn-primary#checkHotel Logout
	form.form-forizontal(method = "post",action="/mainpage/searchRest")
		div.control-group
			label.control-label(for = "search") Restaurant Name Here
			div.controls
				input.input-xlarge#search(type = "text", name = "search")
			div.form-actions
				button.btn.btn-primary#searchbtn Search Now
	br
	br
	br
	div.row(background-color:"#E4B564")
		div.span4
			div.well.searchWay
				h3 Hotels
				form.form-forizontal(method = "post",action = "/getHotel")
					a(href='/mainpage/getHotel').btn.btn-primary#checkHotel check
		div.span4
			div.well.searchWay1
				h3 Restaurants
				a(href='/mainpage/getRestaurant').btn.btn-primary#search  check
		div.span4
			div.well.searchWay2
				h3 Entertainments
				a(href='/mainpage/getEntertain').btn.btn-primary#search  check