extends layout

block content
	h1 Hello #{Name}
	div.hero-unit
		h1 Korean Guide
		P Get information here
	form.form-forizontal(method = "post",action="/mainpage/searchRest")
		div.control-group
			label.control-label(for = "search") Restaurant Name Here
			div.controls
				input.input-xlarge#search(type = "text", name = "search")
			div.form-actions
				button.btn.btn-primary#searchbtn Search Now
	div.row
		div.span4
			div.well.searchWay
				h3 Hotels
				form.form-forizontal(method = "post",action = "/getHotel")
					a(href='/mainpage/getHotel').btn.btn-primary#checkHotel check
		div.span4
			div.well.searchWay
				h3 Restaurants
				a(href='/profile').btn.btn-primary#search  check
		div.span4
			div.well.searchWay
				h3 Entertainments
				a(href='/fileRequest').btn.btn-primary#search  check