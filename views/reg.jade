extends layout

block content
    form(method = "post",style='margin:0; padding:0; display:inline')
        .containter(style='display:inline')
          .row
            .col-sm-6.col-md-4.col-md-offset-4
              h1.text-center.login-title Please Sign Up
              .account-wall(style='display:inline')
                img.profile-img(src='/bootstrap/pics/icon.png', alt='')
                form.form-signin(style='margin:0; padding:0; display:inline')
                  input.form-control(type='text', name='usermail', placeholder='Email address', required='', autofocus='')
                  input.form-control(type='password', name='password', placeholder='Password', required='')
                  div.for-actions
                    button.btn.btn-lg.btn-primary.btn-block(type='submit')
                      | Sign up 
